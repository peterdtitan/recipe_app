<h2>Public Recipes</h2>
<% @recipes.each do |recipe| %>
  <div id="recipes" class="min-w-full flex flex-col gap-4 items-center justify-center mt-10">
    <% @recipes.each do |recipe| %>
      <div class="flex justify-around items-start gap-10 h-40 w-[700px] rounded-md p-8 bg-slate-200">
        <div class="flex flex-col gap-10 justify-between">
          <h2 class="font-bold text-2xl"><%= recipe.name %></h2>
          <p>Recipe by: user 1</p>
        </div>

        <div class="rounded p-2 bg-emerald-50 h-24">
          <p class="font-thin"><%= truncate(recipe.description, length: 50) %>...</p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
